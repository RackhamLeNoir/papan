{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Main Process - electron",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron",
      "windows": {
        "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron.cmd"
      },
      "outputCapture": "std",
      "program": "${workspaceRoot}/main.js"
    },
    {
      "name": "Debug Main Process - nodejs",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/main.js"
    },
    {
      "name": "Debug Mocha tests",
      "type": "node",
      "request": "launch",
      "preLaunchTask": "instrument",
      "args": [
        "test/common",
        "test/nodejs",
        "--exit",
        "-r", "test/utils/coverage.js",
        "--reporter", "mocha-simple-html-reporter",
        "--reporter-options", "output=node-report.html"
      ],
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/mocha",
      "windows": {
        "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/mocha.cmd"
      },
      "program": "${workspaceRoot}/node_modules/mocha/index.js"
    },
    {
      "name": "Debug Electron Mocha tests",
      "type": "node",
      "request": "launch",
      "preLaunchTask": "instrument",
      "args": [
        "test/common",
        "test/electron",
        "--exit",
        "-r", "test/utils/coverage.js",
        "--reporter", "mocha-simple-html-reporter",
        "--reporter-options", "output=electron-report.html"
      ],
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron",
      "windows": {
        "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron.cmd"
      },
      "outputCapture": "std",
      "program": "${workspaceRoot}/node_modules/electron-mocha/index.js"
    }
  ]
}
