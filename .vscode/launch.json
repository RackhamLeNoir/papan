{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Main Process - electron",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron",
      "runtimeArgs": [
        "--remote-debugging-port=9223"
      ],
      "windows": {
        "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron.cmd"
      },
      "outputCapture": "std",
      "program": "${workspaceRoot}/main.js"
    },
    {
      "name": "Debug Renderer Process",
      "type": "chrome",
      "request": "attach",
      "port": 9223,
      "webRoot": "${workspaceFolder}",
      "timeout": 30000
    },
    {
      "name": "Debug Main Process - nodejs",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/main.js"
    },
    {
      "name": "Debug Mocha tests",
      "type": "node",
      "request": "launch",
      "args": [
        "test/common",
        "test/nodejs",
        "--exit"
      ],
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/mocha",
      "windows": {
        "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/mocha.cmd"
      },
      "program": "${workspaceRoot}/node_modules/mocha/index.js"
    },
    {
      "name": "Debug Electron Mocha tests",
      "type": "node",
      "request": "launch",
      "args": [
        "test/common",
        "test/electron",
        "--exit"      ],
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron",
      "windows": {
        "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron.cmd"
      },
      "outputCapture": "std",
      "program": "${workspaceRoot}/node_modules/electron-mocha/index.js"
    }
  ],
  "compounds": [
    {
      "name": "Debug Electron - all",
      "configurations": [
        "Debug Main Process - electron",
        "Debug Renderer Process"
      ]
    }
  ]
}
